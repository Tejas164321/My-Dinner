rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Allow any authenticated user to read or write to any document.
      // This is a simple, secure rule for development. For production,
      // you would implement more granular, role-based security rules.
      allow read, write: if request.auth != null;
    }
  }
}
