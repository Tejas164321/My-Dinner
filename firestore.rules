rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }

    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Default deny all access to prevent accidental exposure
    match /{document=**} {
      allow read, write: if false;
    }

    // Users Collection
    match /users/{userId} {
      // A user can read their own document
      allow get: if isSignedIn() && isOwner(userId);
      
      // A student can read an admin's profile to get the secret code during the join process
      allow get: if isStudent() && get(/databases/$(database)/documents/users/$(userId)).data.role == 'admin';

      // A user can update their own document.
      allow update: if isSignedIn() && isOwner(userId);
      
      // An admin can read, update, or delete any user document.
      allow get, update, delete: if isAdmin();
      
      // Anyone can create a user document (for signup).
      allow create: if true;
    }
    
    // Messes Collection - for public listing of messes
    match /messes/{messId} {
        // Any signed-in user can read the list of messes.
        allow read: if isSignedIn();
        // Only admins can create mess documents (and they must be the owner).
        allow create: if isAdmin() && isOwner(messId);
        // Only the owner admin can update their mess info.
        allow update: if isAdmin() && isOwner(messId);
    }

    // Holidays Collection
    match /holidays/{holidayId} {
      allow read: if isSignedIn();
      // write includes create, update, delete
      allow write: if isAdmin();
    }

    // Leaves Collection
    match /leaves/{leaveId} {
      allow create: if isStudent();
      allow read, delete: if isStudent() && resource.data.studentId == request.auth.uid;
      // Allows admin to query all leaves
      allow list: if isAdmin();
    }

    // Menus Collection
    match /menus/{menuId} {
        allow read: if isSignedIn();
        allow write: if isAdmin();
    }
    
    // Plan Change Requests Collection
    match /planChangeRequests/{requestId} {
        allow create: if isStudent();
        allow read, delete: if isAdmin();
    }
  }
}
