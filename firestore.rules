
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections for any signed-in user.
    // This is a common starting point for development. For production,
    // you would want more granular rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
