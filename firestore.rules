
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows any authenticated user to read and write to the database.
    // For a production app, you would want to create more granular rules,
    // for example, only allowing admins to write to the 'holidays' collection.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
